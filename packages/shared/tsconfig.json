{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/.d.ts"],
  "files": ["src/index.ts"]
}
