{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["**/*.test.ts", "./src/Cashu.ts"]
}
