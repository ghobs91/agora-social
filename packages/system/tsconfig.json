{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "files": ["src/index.ts"]
}
